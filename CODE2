<%
    // Retrieve TaskManager instance from application scope
    TaskManager manager = (TaskManager) application.getAttribute("manager");
    if (manager == null) {
        manager = new TaskManager();
        application.setAttribute("manager", manager);
    }

    // Handle form submission
    String title = request.getParameter("title");
    String loadStr = request.getParameter("load");
    if (title != null && !title.isBlank() && loadStr != null) {
        try {
            int load = Integer.parseInt(loadStr);
            if (load >= 1 && load <= 10) {
                manager.addTask(new Task(title, load));
            }
        } catch (NumberFormatException e) {
            out.println("<p style='color:red;text-align:center;'>Invalid load. Enter 1â€“10.</p>");
        }
    }

    List<Task> tasks = manager.getTasks();
    int totalLoad = manager.getTotalCognitiveLoad();
%>

